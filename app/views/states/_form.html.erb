<div class="card shadow bg-white rounded">
<%= form_with(model: state) do |form| %>
  <% if state.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
        <% state.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block", class:"form-label" %>
    <%= form.text_field :name, class:"form-control form-control-sm" %>
  </div>

  <div class="form-group">
    <%= form.file_field :attachment, class:"form-control form-control-sm" %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit nil, class:"btn btn-info" %>
  </div>

<% end %>
</div>